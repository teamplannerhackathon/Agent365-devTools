[
  {
    "name": "mcp_SharePointTools_graph_batch",
    "description": "Send a Microsoft Graph batch request (up to 20 subrequests).",
    "inputSchema": {
      "type": "object",
      "properties": {
        "body": {
          "type": "object",
          "x-ms-location": "body",
          "x-ms-path": "body",
          "properties": {
            "requests": {
              "type": "array",
              "minItems": 1,
              "maxItems": 20,
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Unique id within this batch."
                  },
                  "method": {
                    "type": "string",
                    "enum": [
                      "GET",
                      "POST",
                      "PATCH",
                      "PUT",
                      "DELETE"
                    ]
                  },
                  "url": {
                    "type": "string",
                    "description": "Relative Graph URL (starts with /v1.0 or /beta omitted; use just the path starting with /)."
                  },
                  "headers": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "body": {
                    "type": "object"
                  },
                  "dependsOn": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Optional ids this request depends on."
                  }
                },
                "required": [
                  "id",
                  "method",
                  "url"
                ]
              }
            }
          },
          "required": [
            "requests"
          ]
        }
      },
      "required": [
        "body"
      ]
    },
    "responseTemplate": "Batch request with {{body.requests.length}} subrequests completed (mock).",
    "delayMs": 250,
    "errorRate": 0,
    "statusCode": 200,
    "enabled": true
  },
